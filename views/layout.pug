doctype html
html
    head
        title Knowledge Base
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
        

    body
        nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
            a.navbar-brand(href='/') KnowledgeBase
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNavAltMarkup', aria-controls='navbarNavAltMarkup', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNavAltMarkup.collapse.navbar-collapse
                    
                ul.nav.navbar-nav.navbar-right
                    li
                        a.nav-item.nav-link(href='/') Home 
                    if user
                        li
                            a.nav-item.nav-link(href='/articles/add') Add Articles

                    if user 
                        li
                            a.nav-item.nav-link(href='/users/logout') Logout
                    else 
                        li
                            a.nav-item.nav-link(href='/users/register') Register
                    
                        li
                            a.nav-item.nav-link(href='/users/login') Log In
                    
        .container
            br
            != messages('message',locals)
            if errors   
                each error in errors
                    div(class="alert alert-danger") #{error.msg}
            block content
            br
            hr
            footer
                p Copyright &copy; 2018

    script(src='/bower_components/jquery/dist/jquery.js')
    script(src='/bower_components/bootstrap/dist/js/bootstrap.js') 
    script(src='/js/main.js')